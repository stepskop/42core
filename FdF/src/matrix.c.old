#include "fdf.h"

void	rotate_x(double *y, double *z, double angle)
{
	double		tmp;

	tmp = *y;
	*y = *y * cos(angle) + *z * sin(angle);
	*z = tmp * -sin(angle) + *z * cos(angle);
}

static void	rotate_y(double *x, double *z, double angle)
{
	double		tmp;

	tmp = *x;
	*x = *x * cos(angle) + *z * sin(angle);
	*z = tmp * -sin(angle) + *z * cos(angle);
}

static void	rotate_z(double *x, double *y, double angle)
{
	double		tmp;

	tmp = *x;
	*x = *x * cos(angle) - *y * sin(angle);
	*y = tmp * sin(angle) + *y * cos(angle);
}

t_point	get_rotation(t_point point, t_fdf fdf)
{
	//point.z *= (fdf.camera.scale * 0.2) * (1 + fdf.camera.elev);
	//point.x -= (double)(fdf.map.w * fdf.camera.scale) / 2;
	//point.y -= (double)(fdf.map.h * fdf.camera.scale) / 2;
	rotate_x(&point.y, &point.z, fdf.camera.x_angle);
	rotate_y(&point.x, &point.z, fdf.camera.y_angle);
	rotate_z(&point.x, &point.y, fdf.camera.z_angle);
	//point.y += (double)HEIGHT / 2 + fdf.camera.offset.y;
	//point.x += (double)WIDTH / 2 + fdf.camera.offset.x;
	return (point);
}
