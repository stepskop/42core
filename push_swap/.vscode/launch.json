{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug push_swap",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap",  // Path to the executable
            "args": ["5 2 7 1 6 3 9 4 8"],  // Optional: you can provide command-line arguments here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // Working directory
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // Path to gdb (adjust if different on your system)
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build push_swap",  // This will trigger the build before running the debugger
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "engineLogging": true,
                "trace": true
            }
        }
    ]
}
